global HSHELL_ENDTASK := 10    ; A handle to the window that should be forced to exit.
global HSHELL_ACCESSIBILITYSTATE := 11    ; The accessibility state has changed.
global HSHELL_APPCOMMAND := 12    ; The user completed an input event (for example, pressed an application command button on the mouse or an application command key on the keyboard), and the application did not handle the WM_APPCOMMAND message generated by that input. if the Shell procedure handles the WM_COMMAND message, it should not call CallNextHookEx. See the return Value section for more information.
global HSHELL_WINDOWREPLACED := 13    ; A top-level window is being replaced. The window exists when the system calls this hook.
global HSHELL_WINDOWREPLACING := 14    ; A handle to the window replacing the top-level window.

global HSHELL_MONITORCHANGED := 16    ; A handle to the window that moved to a different monitor.

